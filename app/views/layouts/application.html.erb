<!DOCTYPE html>
<html>
<head>
  <title>GbBank</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true, "cache" => false %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <% ["Raleway", "Open+Sans"].each do |family| %>
    <%=
      stylesheet_link_tag(
        "http://fonts.googleapis.com/css?family=#{family}",
        type: "text/css"
      )
    %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <% end %>
</head>
<body id="<%= page_specific_css_id %>">

<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:error] %>
      <p>
        <ul>
        <% if flash[:error_messages] %>
          <% flash[:error_messages].each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>
        </ul>
      </p>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
